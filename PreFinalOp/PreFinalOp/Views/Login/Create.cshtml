

@{
    if (IsPost)
    {
        string Name = Request.Form["companyname"];
        string Amount = Request.Form["contactname"];
        int MF = Request.Form["employees"].AsInt();

        <text>
            Hello @Session["username"]
            You entered: <br />
            Name: @Name <br />
            Amount: @Amount <br />
            MF: @MF <br />
        </text>
    }
}


<!DOCTYPE html>
<html>
<head>
    <title>User Form</title>
</head>
<body>
    <form method="post">
        <fieldset>
            <legend>Add MF Data</legend>
            <div>
                <label for="Name">Name:</label>
                <input type="text" name="Name" value="" />
            </div>
            <div>
                <label for="Amount">Investment Amount:</label>
                <input type="text" name="Amount" value="" />
            </div>
            <div>
                <label for="MF">MF Type:</label>
                <input type="text" name="MF" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="submit" value="Submit" class="submit" />
            </div>
        </fieldset>
    </form>
</body>
</html>